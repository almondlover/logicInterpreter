<Window x:Class="logicgui.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:logicgui"
        mc:Ignorable="d"
        Title="TableWindow" Height="312" Width="628">
    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TableTextBox" Grid.Column="1" Margin="10,41,10,10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" IsReadOnly="True" FontStretch="UltraExpanded" FontSize="14" AcceptsReturn="True"/>
        <Label Content="Truth table:" Margin="10,41,10,0" VerticalAlignment="Top"/>
        <Label Content="Function name:" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" Grid.Column="1" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" IsReadOnly="True"/>
        <Button x:Name="FindButton" Content="Find" Margin="10,0,10,10" Height="29" VerticalAlignment="Bottom" Click="FindButton_Click" Visibility="Hidden"/>
    </Grid>
</Window>
